{
    "schemaVersion": 1,
    "id": "boathud",
    "version": "${version}",

    "name": "BoatHud",
    "description": "This mod adds a racing style HUD, configurable, for riding a boat, and is designed mostly for racing boats on ice.",
    "authors": [
        "hibi"
    ],
    "contact": {
        "issues": "https://github.com/jewtvet/boathud_121/issues"
    },

    "license": "Unlicense",
    "icon": "assets/boathud/icon.png",

    "environment": "client",
    "entrypoints": {
        "client": [
            "hibi.boathud.Common"
        ],
        "modmenu": [
            "hibi.boathud.MenuInteg"
        ]
    },
    "mixins": [
        "boathud.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.15.3",
        "fabric": "*",
        "minecraft": ">=1.21",
        "java": ">=21",
        "cloth-config2": ">=11.0"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.modrinth": "https://modrinth.com/project/boathud-1.21"
            }
        }
    }
}